<div class="container">
	<div class="row">

		<div class="col-12">
			<div class="jumbotron text-center">
			  <h1 class="display-3"><span class='fa fa-hand-lizard-o'></span> Eat Da Burger!</h1>
			</div>
		</div> {{!-- column --}}
		
		<div class="col-12 text-center">

			<h2>Enter a burger you'd like to eat</h2>
			<form class="create-form">

			  <div class="form-group">
			    <label for="bn">Burger Name:</label>
			    <input class="" type="text" id="bn" name="burger_name">
			  </div>

			  <button class="btn btn-dark" type="submit">Add Burger</button>
			</form><br />

		</div> {{!-- column --}}

		<div class="col-6">

			<h3>Burgers Ordered</h3>

			<ul class="list-group">
			  {{#each burgers}}
				  {{#unless devoured}}
				    {{> burgers/burger-block devour=true}}
				   {{/unless}}
			  {{/each}}
			</ul>

		</div>

		<div class="col-6">

			<h3>Burgers Devoured!</h3>

			<ul class="list-group">
				{{#each burgers}}
					{{#if devoured}}
						{{> burgers/burger-block devour=false}}
					{{/if}}
				{{/each}}
			</ul>

		</div> {{!-- column --}}

	</div> {{!-- row --}}
</div> {{!-- container --}}